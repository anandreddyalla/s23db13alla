extends layout

block content
  h1= title
  p Welcome to Ananda Reddy Alla web application page working on pug within this lab #{title}

  button(type="button", class="btn btn-secondary" onclick="goFaster()") Press  me
  p
  div#faster Increase the speed
  p
  a(href='/cars') View Cars
  br
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register

  if (user)
    p You are currently logged in as #{user && user.username}
    a(href="/cars") Take me to cars
    br
    a(href="/logout") Logout

  script.
    console.log("running on http://localhost:3000/")

  script.
    var mph = 20;
    var change = 1;

    function goFaster() {
      mph += change;
      change += 1;
      document.getElementById('faster').textContent = `MPH ${mph} with change ${change}`;
    }
